{
  "manifest_version": 3,
  "name": "Test Betterfly Proxy Switcher",
  "version": "1.1",
  "description": "Test version for debugging More Settings button",
  "permissions": [
    "proxy",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "tests/debug-simplified-popup.html",
    "default_title": "Debug Proxy Switcher"
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
